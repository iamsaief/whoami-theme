{
	"$schema": "https://schemas.wp.org/wp/6.3/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "1170px",
			"wideSize": "1440px"
		},
		"spacing": {
			"units": ["%", "px", "em", "rem", "vh", "vw"]
		},
		"color": {
			"defaultDuotone": false,
			"custom": true,
			"palette": [
				{
					"name": "Primary",
					"slug": "wmi-primary",
					"color": "hsl(216 81% 45% / 1)"
				},
				{
					"name": "Text",
					"slug": "wmi-body-text",
					"color": "hsl(0deg 0% 10.2%)"
				},
				{
					"name": "Background",
					"slug": "wmi-body-bg",
					"color": "hsl(0deg 0% 100%)"
				},
				{
					"name": "Heading",
					"slug": "wmi-heading",
					"color": "hsl(0deg 0% 9%)"
				},
				{
					"name": "Border",
					"slug": "wmi-border",
					"color": "hsl(0 0% 95% / 1)"
				}
			]
		},
		"typography": {
			"fluid": true,
			"fontFamilies": [
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
					"name": "System Font",
					"slug": "system-font"
				}
			]
		}
	},
	"styles": {
		"spacing": {
			"blockGap": "15px",
			"padding": {
				"right": "15px",
				"left": "15px"
			}
		},
		"color": {
			"background": "var(--wp--preset--color--wmi-body-bg, #fff)",
			"text": "var(--wp--preset--color--wmi-body-text, #1a1a1a)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--system-font)",
			"fontSize": "16px",
			"fontWeight": "400",
			"lineHeight": "1.4"
		},
		"elements": {
			"heading": {
				"color": {
					"text": "var(--wp--preset--color--wmi-heading, #1a1a1a)"
				}
			},
			"link": {
				"typography": {
					"textDecoration": "none"
				},
				"color": {
					"text": "var(--wp--preset--color--wmi-primary)"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
